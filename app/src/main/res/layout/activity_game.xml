<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="spacebar.backgammoid.GameActivity">

    <LinearLayout
        android:id="@+id/viewport"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/board"
        android:clipChildren="false"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#c0bebebe"
            android:clipChildren="false">

            <TextView
                android:id="@+id/score_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:clipChildren="false"
                android:text="@string/Score"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ff000000" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/board"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:clipChildren="false"
            android:measureWithLargestChild="false"
            android:orientation="horizontal"
            android:padding="30dp">

            <LinearLayout
                android:id="@+id/leftboard"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="6"
                android:background="@drawable/board_area"
                android:clipChildren="false"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/leftboard_top"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:baselineAligned="false"
                    android:clipChildren="false"
                    android:orientation="horizontal">

                    <spacebar.backgammoid.PointView
                        android:id="@+id/point13"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/black_point"
                        android:clipChildren="false"
                        android:focusableInTouchMode="false"
                        android:gravity="top"
                        android:orientation="vertical"
                        android:weightSum="5"
                        app:upsideDown="true" />

                    <spacebar.backgammoid.PointView
                        android:id="@+id/point14"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/red_point"
                        android:clipChildren="false"
                        android:gravity="top"
                        android:orientation="vertical"
                        android:weightSum="5"
                        app:upsideDown="true" />

                    <spacebar.backgammoid.PointView
                        android:id="@+id/point15"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/black_point"
                        android:clipChildren="false"
                        android:gravity="top"
                        android:orientation="vertical"
                        android:weightSum="5"
                        app:upsideDown="true" />

                    <spacebar.backgammoid.PointView
                        android:id="@+id/point16"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/red_point"
                        android:clipChildren="false"
                        android:gravity="top"
                        android:orientation="vertical"
                        android:weightSum="5"
                        app:upsideDown="true" />

                    <spacebar.backgammoid.PointView
                        android:id="@+id/point17"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/black_point"
                        android:clipChildren="false"
                        android:gravity="top"
                        android:orientation="vertical"
                        android:weightSum="5"
                        app:upsideDown="true" />

                    <spacebar.backgammoid.PointView
                        android:id="@+id/point18"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/red_point"
                        android:clipChildren="false"
                        android:gravity="top"
                        android:orientation="vertical"
                        android:weightSum="5"
                        app:upsideDown="true" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:clipChildren="false" />

                <LinearLayout
                    android:id="@+id/leftboard_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:baselineAligned="false"
                    android:clipChildren="false"
                    android:orientation="horizontal">

                    <spacebar.backgammoid.PointView
                        android:id="@+id/point12"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/red_point_down"
                        android:clipChildren="false"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:weightSum="5"
                        app:upsideDown="false" />

                    <spacebar.backgammoid.PointView
                        android:id="@+id/point11"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/black_point_down"
                        android:clipChildren="false"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:weightSum="5"
                        app:upsideDown="false" />

                    <spacebar.backgammoid.PointView
                        android:id="@+id/point10"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/red_point_down"
                        android:clipChildren="false"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:weightSum="5"
                        app:upsideDown="false" />

                    <spacebar.backgammoid.PointView
                        android:id="@+id/point9"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/black_point_down"
                        android:clipChildren="false"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:weightSum="5"></spacebar.backgammoid.PointView>

                    <spacebar.backgammoid.PointView
                        android:id="@+id/point8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/red_point_down"
                        android:clipChildren="false"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:weightSum="5"
                        app:upsideDown="false" />

                    <spacebar.backgammoid.PointView
                        android:id="@+id/point7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/black_point_down"
                        android:clipChildren="false"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:weightSum="5"
                        app:upsideDown="false" />

                </LinearLayout>

            </LinearLayout>

            <spacebar.backgammoid.PointView
                android:id="@+id/bar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="#57000000"
                android:clipChildren="false"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="10"
                app:upsideDown="false"
                app:bar="true" />

            <LinearLayout
                android:id="@+id/rightboard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:background="@drawable/board_area"
                android:clipChildren="false"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/rightboard_top"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:baselineAligned="false"
                    android:clipChildren="false"
                    android:gravity="center_horizontal|top"
                    android:orientation="horizontal">

                    <spacebar.backgammoid.PointView
                        android:id="@+id/point19"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/black_point"
                        android:clipChildren="false"
                        android:gravity="top"
                        android:orientation="vertical"
                        android:weightSum="5"
                        app:upsideDown="true" />

                    <spacebar.backgammoid.PointView
                        android:id="@+id/point20"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/red_point"
                        android:clipChildren="false"
                        android:gravity="top"
                        android:orientation="vertical"
                        android:weightSum="5"
                        app:upsideDown="true" />

                    <spacebar.backgammoid.PointView
                        android:id="@+id/point21"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/black_point"
                        android:clipChildren="false"
                        android:gravity="top"
                        android:orientation="vertical"
                        android:weightSum="5"
                        app:upsideDown="true" />

                    <spacebar.backgammoid.PointView
                        android:id="@+id/point22"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/red_point"
                        android:clipChildren="false"
                        android:gravity="top"
                        android:orientation="vertical"
                        android:weightSum="5"
                        app:upsideDown="true" />

                    <spacebar.backgammoid.PointView
                        android:id="@+id/point23"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/black_point"
                        android:clipChildren="false"
                        android:gravity="top"
                        android:orientation="vertical"
                        android:weightSum="5"
                        app:upsideDown="true" />

                    <spacebar.backgammoid.PointView
                        android:id="@+id/point24"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/red_point"
                        android:clipChildren="false"
                        android:gravity="top"
                        android:orientation="vertical"
                        android:weightSum="5"
                        app:upsideDown="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:clipChildren="false"
                    android:onClick="onDiceTouch"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="2"
                        android:clipChildren="false" />

                    <view
                        android:id="@+id/dice1"
                        class="spacebar.backgammoid.DieView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:clipChildren="false" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clipChildren="false" />

                    <view
                        android:id="@+id/dice2"
                        class="spacebar.backgammoid.DieView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:clipChildren="false" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="2"
                        android:clipChildren="false" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rightboard_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:baselineAligned="false"
                    android:clipChildren="false"
                    android:gravity="center_horizontal|bottom"
                    android:orientation="horizontal">

                    <spacebar.backgammoid.PointView
                        android:id="@+id/point6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/red_point_down"
                        android:clipChildren="false"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:weightSum="5"
                        app:upsideDown="false" />

                    <spacebar.backgammoid.PointView
                        android:id="@+id/point5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/black_point_down"
                        android:clipChildren="false"
                        android:focusableInTouchMode="false"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:weightSum="5"
                        app:upsideDown="false" />

                    <spacebar.backgammoid.PointView
                        android:id="@+id/point4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/red_point_down"
                        android:clipChildren="false"
                        android:focusable="false"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:weightSum="5"
                        app:upsideDown="false" />

                    <spacebar.backgammoid.PointView
                        android:id="@+id/point3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/black_point_down"
                        android:clipChildren="false"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:weightSum="5"
                        app:upsideDown="false" />

                    <spacebar.backgammoid.PointView
                        android:id="@+id/point2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/red_point_down"
                        android:baselineAligned="false"
                        android:clipChildren="false"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:weightSum="5"
                        app:upsideDown="false" />

                    <spacebar.backgammoid.PointView
                        android:id="@+id/point1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/black_point_down"
                        android:baselineAligned="false"
                        android:clipChildren="false"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:weightSum="5"
                        app:upsideDown="false" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/goal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:clipChildren="false"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="10">

                <spacebar.backgammoid.PointView
                    android:id="@+id/goalP1"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:background="#57000000"
                    android:clipChildren="false"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="10"
                    app:upsideDown="false" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:clipChildren="false" />

                <spacebar.backgammoid.PointView
                    android:id="@+id/goalP2"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:background="#57000000"
                    android:clipChildren="false"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="10"
                    app:upsideDown="false" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
